{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@4.0.0"
    }
  },
  "buildCommand": "npm --prefix frontend ci && npm --prefix frontend run build",
  "outputDirectory": "frontend/dist",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*\\..*)", "dest": "/$1" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}